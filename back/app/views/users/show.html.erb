<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @match_user %>
        <%= button_to("編集", "/users/#{@user.id}/edit", method: :get) %>
      <% end %>
    </div>
  </div>
  <div class="main posts-main">
    <%= @user.name%>さんの出品履歴
    <ul class="posts-index">
    <% @user.items.each do |item| %>
      <li class="posts-index-item">
        <div>
          <%= link_to image_tag("/item_images/#{item.image_name}"), "/items/#{item.id}" %>
        </div>
        <div>
          <%= link_to(item.content, "/items/#{item.id}" )%>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
</div>