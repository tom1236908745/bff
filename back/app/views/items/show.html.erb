<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
      
        <%= @item.content %>
      </p>
      <div class="post-time">
      
        <%= @item.created_at%>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/items/#{@item.id}/edit") %>
        <%= link_to("削除", "/items/#{@item.id}/destroy", {method: "post"}) %>
      </div>
    </div>
  </div>
</div>