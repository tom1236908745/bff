<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @item.content %>
      </p>
      <div class="post-time">
        <%= @item.created_at%>
      </div>
      <div class="post-menus">
        <%= button_to("編集", "/items/#{@item.id}/edit", method: :get) %>
        <%= button_to("削除", "/items/#{@item.id}/destroy",  method: :delete)  %>
      </div>
    </div>
  </div>
</div>