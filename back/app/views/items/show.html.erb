<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-user-name">
         <%= link_to(@user.name, "/users/#{@user.id}")%> さんの出品です
      </div>
      <img src="<%= "/item_images/#{@item.image_name}" %>">
      <p>
        <%= @item.content %>
      </p>
      <div class="post-time">
        <%= @item.created_at%>
      </div>
      <% if @match_user %>
        <div class="post-menus">
          <%= button_to("編集", "/items/#{@item.id}/edit", method: :get) %>
          <%= button_to("削除", "/items/#{@item.id}/destroy",  method: :delete)  %>
        </div>
      <% end %>
    </div>
  </div>
</div>